<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.themeal_app.Data.UI.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_nextFragment"
            app:destination="@id/nextFragment" />
    </fragment>

    <fragment
        android:id="@+id/nextFragment"
        android:name="com.example.themeal_app.Data.UI.LoginFragment"
        android:label="NextFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.themeal_app.Data.UI.MainActivity"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" />
</navigation>
